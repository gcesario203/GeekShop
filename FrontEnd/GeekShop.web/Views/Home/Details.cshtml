@model ProductModel

<form asp-action="Index" asp-controller="Home">
    <input readonly  asp-for="Id" hidden>
    <br />

    <div class="container fluid border p-3">
        <h1 class="text-primary">@Model.SubstringData(Model.Name, 50)</h1>

        <hr />

        <div class="row">
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input readonly   asp-for="Price" class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea readonly  asp-for="Description" class="form-control" rows="5" ></textarea>
            </div>

            <div class="col-2">
                <label asp-for="CategoryName" class="control-label pt-2" style="font-size: 20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input readonly  asp-for="CategoryName" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary form-control">
                    Back To List
                </a>
            </div>

            <div class="col-5">
                <input type="submit" value="Add to cart" class="btn btn-success form-control"/>
            </div>
        </div>
    </div>
</form>